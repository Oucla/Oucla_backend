{
  "name": "event-owner",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "main": "index.js",
 "scripts": {
  "start:auth": "npm run dev --prefix services/auth-service",
  "start:email": "npm run dev --prefix services/email-service",
  "start:dashboard": "npm run dev --prefix services/dashboard-service",
  "start:event": "npm run dev --prefix services/event-service",
  "start:all": "concurrently \"npm run start:auth\" \"npm run start:email\" \"npm run start:dashboard\" \"npm run start:event\"",
  "build": "tsc -b"
},
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Backend services for event ticketing",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.0"
  }
}
